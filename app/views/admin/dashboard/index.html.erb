<h1>管理画面</h1>
<hr>


<h2>商品管理</h2>
<% link_to '商品登録', "#" %>
<hr>
<% if @products.present? %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>在庫数</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.stock_quantity %></td>
          <td>
            <%= link_to "削除", admin_dashboard_destroy_path(product.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>まだ商品がありません</h2>
<% end %>

<br><br>
<hr>

<h2>注文管理</h2>
<% if @orders.present? %>
  <table>
    <thead>
      <tr>
        <th>注文者</th>
        <th>合計金額</th>
        <th>注文日</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.customer_name %></td>
          <td><%= order.order_items.sum { |item| item.quantity * item.price } %>円</td>
          <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>まだ注文はありません。</h3>
<% end %>

<nav>
  <%= link_to "トップページへ戻る", root_path %>
</nav>
