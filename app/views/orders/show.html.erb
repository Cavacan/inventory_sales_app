<h1>注文内容</h1>

<p>注文者：<%= @order.customer_name %></p>
<p>注文日：<%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></p>
<p>合計金額：<%= @order.order_items.sum { |item| item.quantity.to_i * item.price.to_i } %> 円</p>

<hr>

<h2>注文詳細</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>数量</th>
      <th>単価</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity.to_i * item.price.to_i %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<nav>
  <%= link_to '注文履歴に戻る', order_history_path %> | 
  <%= link_to 'トップページへ戻る', root_path %>
</nav>
