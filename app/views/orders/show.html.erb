<h1>注文が確定しました</h1>

<% if @order.present? %>
  <p>注文者：<%= @order.customer_name %></p>
  <p>注文日：<%= @order.created_at.strftime('%Y/%m/%d %H:%M') %></p>
  <p>合計金額：<%= @order.order_items.sum { |item| item.quantity * item.price } %> 円</p>

  <h2>注文内容</h2>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>数量</th>
        <th>単価</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |item| %>
        <tr>
          <td><%= item.product_name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.price %></td>
          <td><%= item.quantity * item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h2>まだ注文はありません。</h2>
<% end %>

<nav>
  <%= link_to '商品一覧に戻る', products_path %>
</nav>
